<Application x:Class="ToxicBizBuddyWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Cargamos SOLO tu diccionario de estilos -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Opción A (relativa): -->
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                <ResourceDictionary Source="Resources/Buttons.xaml"/>
                <ResourceDictionary Source="Resources/DataGrid.xaml"/>
                <ResourceDictionary Source="Resources/Cards.xaml"/>
            <!-- Opción B (más robusta, si la A falla): -->
            <!-- <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/> -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Recursos locales (asegurate de que NO estén también en Styles.xaml) -->
            <DropShadowEffect x:Key="ShadowEffect"
                        BlurRadius="10"
                        ShadowDepth="2"
                        Direction="270"
                        Color="#000000"
                        Opacity="0.1"/>
            <!-- ⚠️ NO pongas SidebarButtonStyle aquí si ya está en Styles.xaml -->
        </ResourceDictionary>
    </Application.Resources>
</Application>

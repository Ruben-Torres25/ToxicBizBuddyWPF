<UserControl x:Class="ToxicBizBuddyWPF.Components.Pagination"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="48">
    <DockPanel LastChildFill="False" Margin="0,12,0,0">
        <!-- Izquierda: texto -->
        <TextBlock Text="Mostrando 1–10 de 128"
               VerticalAlignment="Center"
               Style="{StaticResource Subtle}"
               Margin="0,0,12,0"
               DockPanel.Dock="Left"/>

        <!-- Derecha: botones -->
        <StackPanel Orientation="Horizontal"
                DockPanel.Dock="Right">
            <Button Style="{StaticResource PaginationButton}"
              Content=""
              FontFamily="Segoe MDL2 Assets"
              ToolTip="Anterior"/>
            <Button Style="{StaticResource PaginationButton}" Content="1"/>
            <Button Style="{StaticResource PaginationButton}" Content="2"/>
            <Button Style="{StaticResource PaginationButton}" Content="3"/>
            <Button Style="{StaticResource PaginationButton}"
              Content=""
              FontFamily="Segoe MDL2 Assets"
              ToolTip="Siguiente"
              Margin="4,0,0,0"/>
        </StackPanel>
    </DockPanel>
</UserControl>

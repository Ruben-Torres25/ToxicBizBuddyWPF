<Page x:Class="ToxicBizBuddyWPF.Views.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="clr-namespace:ToxicBizBuddyWPF.Components"
      Title="ClientsPage">

    <components:PageWrapper>
        <StackPanel>

            <!-- Título -->
            <components:PageHeader Title="Clientes" Subtitle="Lista de clientes registrados"/>

            <!-- Botón Agregar -->
            <components:PrimaryButton Text="Agregar cliente"/>

            <!-- Tabla en card -->
            <components:Card>
                <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="36"
                          ColumnHeaderHeight="36"
                          FontSize="14"
                          BorderThickness="0"
                          Background="White"
                          GridLinesVisibility="None"
                          AlternatingRowBackground="#F1F5F9"
                          Padding="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" />
                        <DataGridTextColumn Header="DNI" Binding="{Binding DNI}" Width="150" />
                        <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="150" />
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </components:Card>

        </StackPanel>
    </components:PageWrapper>
</Page>

<Page x:Class="ToxicBizBuddyWPF.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DashboardPage">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="#1F2937"/>
            <TextBlock Text="Resumen general del negocio" FontSize="14" Foreground="#6B7280" Margin="0,4,0,0"/>

            <UniformGrid Columns="2" Margin="0,20,0,0">
                <Border Background="#D1FAE5" CornerRadius="10" Margin="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Ventas del Día" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="$12,450" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="▲ +8.2%" Foreground="Green" />
                    </StackPanel>
                </Border>

                <Border Background="#E0F2FE" CornerRadius="10" Margin="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Pedidos Activos" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="23" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="▲ +12%" Foreground="Green" />
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
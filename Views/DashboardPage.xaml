<Page x:Class="ToxicBizBuddyWPF.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="clr-namespace:ToxicBizBuddyWPF.Components"
      Title="DashboardPage">

    <components:PageWrapper>
        <StackPanel>

            <!-- Encabezado -->
            <TextBlock Text="Dashboard" Style="{StaticResource H1}"/>
            <TextBlock Text="Resumen general del negocio"
                 Style="{StaticResource Subtle}" Margin="0,4,0,16"/>

            <!-- KPIs -->
            <UniformGrid Columns="2" Rows="2" Margin="0,0,0,16">
                <!-- Ventas del día (gradiente primary) -->
                <Border Style="{StaticResource KpiCardPrimary}" Margin="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Ventas del día" Style="{StaticResource KpiOnGradientLabel}"/>
                        </StackPanel>
                        <TextBlock Text="$12.450" Style="{StaticResource KpiOnGradientValue}" />
                        <TextBlock Text="▲ +8.2%" Style="{StaticResource KpiOnGradientDelta}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Pedidos activos (gradiente success) -->
                <Border Style="{StaticResource KpiCardSuccess}" Margin="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Pedidos activos" Style="{StaticResource KpiOnGradientLabel}"/>
                        </StackPanel>
                        <TextBlock Text="23" Style="{StaticResource KpiOnGradientValue}" />
                        <TextBlock Text="▲ +12%" Style="{StaticResource KpiOnGradientDelta}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Stock bajo (card blanca) -->
                <Border Style="{StaticResource KpiCard}" Margin="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Productos con stock bajo" Style="{StaticResource KpiLabel}"/>
                        </StackPanel>
                        <TextBlock Text="7" Style="{StaticResource KpiValue}"/>
                        <TextBlock Text="▼ -2%" Style="{StaticResource KpiDeltaNegative}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Clientes nuevos (card blanca) -->
                <Border Style="{StaticResource KpiCard}" Margin="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Clientes nuevos" Style="{StaticResource KpiLabel}"/>
                        </StackPanel>
                        <TextBlock Text="12" Style="{StaticResource KpiValue}"/>
                        <TextBlock Text="▲ +5%" Style="{StaticResource KpiDeltaPositive}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Card grande con “gráfico” placeholder -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,12">
                        <TextBlock Text="Ventas de la semana" Style="{StaticResource H1}" FontSize="18"/>
                        <ContentControl Style="{StaticResource Badge}" Content="Demo" Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Placeholder de gráfico (barra simple) -->
                    <Grid Height="180" Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Barras -->
                        <Border Grid.Column="0" Background="{StaticResource Slate200Brush}" CornerRadius="6" VerticalAlignment="Bottom" Height="60" Margin="6"/>
                        <Border Grid.Column="1" Background="{StaticResource Sky600Brush}"   CornerRadius="6" VerticalAlignment="Bottom" Height="120" Margin="6"/>
                        <Border Grid.Column="2" Background="{StaticResource Slate200Brush}" CornerRadius="6" VerticalAlignment="Bottom" Height="80" Margin="6"/>
                        <Border Grid.Column="3" Background="{StaticResource Sky600Brush}"   CornerRadius="6" VerticalAlignment="Bottom" Height="140" Margin="6"/>
                        <Border Grid.Column="4" Background="{StaticResource Slate200Brush}" CornerRadius="6" VerticalAlignment="Bottom" Height="90" Margin="6"/>
                        <Border Grid.Column="5" Background="{StaticResource Sky600Brush}"   CornerRadius="6" VerticalAlignment="Bottom" Height="110" Margin="6"/>
                        <Border Grid.Column="6" Background="{StaticResource Slate200Brush}" CornerRadius="6" VerticalAlignment="Bottom" Height="70" Margin="6"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </components:PageWrapper>
</Page>

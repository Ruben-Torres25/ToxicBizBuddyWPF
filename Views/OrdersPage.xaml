<Page x:Class="ToxicBizBuddyWPF.Views.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ToxicBizBuddyWPF.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/controls"
      Background="#F7F7FF">

    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" Invert="True"/>
        <Style TargetType="TextBlock" x:Key="LinkStyle">
            <Setter Property="Foreground" Value="#2563EB"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÍTULOS -->
        <StackPanel Grid.Row="0" Margin="0 0 0 20">
            <TextBlock Text="Gestión de Pedidos"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#1D1D1F"/>
            <TextBlock Text="Administra todos los pedidos de tus clientes"
                       FontSize="14"
                       Foreground="#6B6B6B"/>
        </StackPanel>

        <!-- BARRA DE BÚSQUEDA Y BOTONES -->
        <DockPanel Grid.Row="1" LastChildFill="False" Margin="0 0 0 20" VerticalAlignment="Center">
            <!-- Caja de búsqueda -->
            <Border Background="White" Padding="10" Width="400"
                    BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Margin="0,0,10,0">
                <Grid>
                    <TextBox Name="SearchBox"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="14"
                             Foreground="#333"/>
                    <TextBlock Text="Buscar por cliente o número de pedido..."
                               FontSize="14"
                               Foreground="#999"
                               Margin="5,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=SearchBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- Botón Filtros -->
            <Button Style="{StaticResource MaterialDesignFlatButton}" Margin="0,0,10,0" Padding="15,5">
                <StackPanel Orientation="Horizontal">
                    <materialDesignIcons:PackIcon Kind="FilterVariant" Width="20" Height="20" Margin="0,0,5,0"/>
                    <TextBlock Text="Filtros"/>
                </StackPanel>
            </Button>

            <!-- Botón Nuevo Pedido -->
            <Button Style="{StaticResource MaterialDesignContainedButton}"
                    Background="#2563EB"
                    Foreground="White"
                    Padding="20,8"
                    FontWeight="Bold">
                <StackPanel Orientation="Horizontal">
                    <materialDesignIcons:PackIcon Kind="Plus" Width="20" Height="20" Margin="0,0,5,0"/>
                    <TextBlock Text="Nuevo Pedido"/>
                </StackPanel>
            </Button>
        </DockPanel>

        <!-- TABLA DE PEDIDOS -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Orders}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderBrush="#DDD"
                  BorderThickness="1"
                  ColumnHeaderHeight="40"
                  RowHeight="50"
                  FontSize="14"
                  GridLinesVisibility="None"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Pedido" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Codigo}" Style="{StaticResource LinkStyle}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="130"/>
                <DataGridTextColumn Header="Items" Binding="{Binding Items}" Width="90"/>

                <DataGridTemplateColumn Header="Total" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Total}" FontWeight="Bold"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Estado" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding EstadoColor}"
                                    Padding="4,2"
                                    CornerRadius="10"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Estado}"
                                           Foreground="Black"
                                           FontSize="12"
                                           FontWeight="Bold"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Acciones" Width="130">
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="Ver" Margin="2">
                                <materialDesignIcons:PackIcon Kind="EyeOutline" Width="20" Height="20"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="Editar" Margin="2">
                                <materialDesignIcons:PackIcon Kind="Pencil" Width="20" Height="20"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignFlatButton}" ToolTip="Eliminar" Margin="2">
                                <materialDesignIcons:PackIcon Kind="TrashCanOutline" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

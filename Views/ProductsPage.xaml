<Page x:Class="ToxicBizBuddyWPF.Views.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="clr-namespace:ToxicBizBuddyWPF.Components"
      Title="ProductsPage">

    <!-- Estilos locales de esta página -->
    <Page.Resources>
        <!-- Tarjeta métrica base -->
        <Style x:Key="MetricCard" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7F0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <!-- Métrica amarilla (Stock Bajo) -->
        <Style x:Key="MetricCardWarn" TargetType="Border" BasedOn="{StaticResource MetricCard}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFF7E6" Offset="0"/>
                        <GradientStop Color="#FFFDF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FDE68A"/>
        </Style>

        <!-- Métrica roja (Stock Crítico) -->
        <Style x:Key="MetricCardDanger" TargetType="Border" BasedOn="{StaticResource MetricCard}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FEE2E2" Offset="0"/>
                        <GradientStop Color="#FFF5F5" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#F9C3C3"/>
        </Style>

        <!-- Métrica verde (Valor Inventario) -->
        <Style x:Key="MetricCardSuccess" TargetType="Border" BasedOn="{StaticResource MetricCard}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E8FBEF" Offset="0"/>
                        <GradientStop Color="#F4FFF9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#D6F5E2"/>
        </Style>

        <!-- Burbuja de icono dentro de las métrricas -->
        <Style x:Key="MetricIconPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#EEF2FF"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </Page.Resources>

    <components:PageWrapper>
        <StackPanel Margin="20">

            <!-- Header con botón “+ Nuevo Producto” -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Gestión de Productos" Style="{StaticResource H1}"/>
                    <TextBlock Text="Controla tu inventario y precios de productos"
                               Style="{StaticResource Subtle}" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource BtnPrimary}"
                        Padding="10,6"
                        Click="AddProduct_Click">
                    <StackPanel Orientation="Horizontal">
                        <!-- Ícono “agregar” de Segoe MDL2 (mismo que usamos en otras vistas) -->
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Text="Agregar producto"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Métricas -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Productos -->
                <Border Grid.Column="0" Style="{StaticResource MetricCard}" Margin="0,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Total Productos" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="156" FontSize="24" FontWeight="Bold" Margin="0,6,0,0"
                                       Foreground="{StaticResource TextStrongBrush}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Margin="12,0,0,0">
                            <TextBlock Text="📦" FontSize="14" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Stock Bajo -->
                <Border Grid.Column="1" Style="{StaticResource MetricCardWarn}" Margin="12,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Stock Bajo" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="7" FontSize="24" FontWeight="Bold" Margin="0,6,0,0"
                                       Foreground="#D97706"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Background="#FFF7ED" Margin="12,0,0,0">
                            <TextBlock Text="⚠" FontSize="14" Foreground="#D97706" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Stock Crítico -->
                <Border Grid.Column="2" Style="{StaticResource MetricCardDanger}" Margin="12,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Stock Crítico" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="2" FontSize="24" FontWeight="Bold" Margin="0,6,0,0"
                                       Foreground="#DC2626"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Background="#FFE4E6" Margin="12,0,0,0">
                            <TextBlock Text="⚠" FontSize="14" Foreground="#DC2626" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Valor Inventario -->
                <Border Grid.Column="3" Style="{StaticResource MetricCardSuccess}" Margin="12,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Valor Inventario" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="€12,450" FontSize="24" FontWeight="Bold" Margin="0,6,0,0"
                                       Foreground="#16A34A"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Background="#E8FFF3" Margin="12,0,0,0">
                            <TextBlock Text="🧱" FontSize="14" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Barra de búsqueda + botón Filtros -->
            <Border CornerRadius="12" BorderBrush="#E5E7F0" BorderThickness="1" Background="White" Padding="8" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input con icono -->
                    <Border CornerRadius="8" BorderBrush="#E5E7F0" BorderThickness="1" Background="White" Padding="10" Margin="0,0,8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                     Background="Transparent" BorderThickness="0" Padding="0"
                                     Style="{StaticResource InputText}"
                                     ToolTip="Buscar productos por nombre o categoría..."/>
                        </Grid>
                    </Border>

                    <!-- Botón Filtros -->
                    <Button Grid.Column="1"
                            Padding="10,8"
                            Background="White"
                            Foreground="{StaticResource TextStrongBrush}"
                            BorderBrush="#E5E7F0"
                            BorderThickness="1"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Filtros"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Card: Lista de Productos -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Lista de Productos" Style="{StaticResource SectionTitle}" Margin="0,0,0,8"/>
                    <Separator Background="{StaticResource DividerBrush}" Height="1" Margin="0,8,0,8"/>

                    <DataGrid AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Padding="4"
                              Style="{StaticResource DataGridBase}"
                              ColumnHeaderStyle="{StaticResource DataGridHeader}"
                              RowStyle="{StaticResource DataGridRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto"   Binding="{Binding Nombre}"    Width="2*"/>
                            <DataGridTextColumn Header="Categoría"  Binding="{Binding Categoria}" Width="*"/>
                            <DataGridTextColumn Header="Precio"     Binding="{Binding Precio}"    Width="120"/>
                            <DataGridTextColumn Header="Stock"      Binding="{Binding Stock}"     Width="150"/>
                            <DataGridTextColumn Header="Estado"     Binding="{Binding Estado}"    Width="140"/>
                            <DataGridTextColumn Header="Proveedor"  Binding="{Binding Proveedor}" Width="*"/>

                            <!-- Acciones -->
                            <DataGridTemplateColumn Header="Acciones" Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Ver" Margin="0,0,6,0">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Editar" Margin="0,0,6,0">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Eliminar">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Paginación -->
            <components:Pagination/>

        </StackPanel>
    </components:PageWrapper>
</Page>

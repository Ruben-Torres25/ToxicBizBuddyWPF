<Page x:Class="ToxicBizBuddyWPF.Views.ProvidersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="clr-namespace:ToxicBizBuddyWPF.Components;assembly=ToxicBizBuddyWPF"


      Title="Proveedores">

    <components:PageWrapper>
        <StackPanel Margin="20">

            <!-- Header con dos botones -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Gestión de Proveedores" Style="{StaticResource H1}"/>
                    <TextBlock Text="Administra tus proveedores y recepción de mercadería"
                               Style="{StaticResource Subtle}" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Registrar Mercadería (ghost/outline verde) -->
                <Button Grid.Column="1"
                        Padding="10,4"
                        Margin="0,0,8,0"
                        Background="White"
                        Foreground="#16A34A"
                        BorderBrush="#86EFAC"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="RegisterStock_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Text="Registrar Mercadería" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- + Nuevo Proveedor (azul primario) -->
                <Button Grid.Column="2"
                        Style="{StaticResource BtnPrimary}"
                        Padding="14,8"
                        Click="AddProvider_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Text="+ Nuevo Proveedor"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Fila de métricas -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Proveedores -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Total Proveedores" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="24" FontSize="24" FontWeight="Bold" Margin="0,6,0,0"
                                       Foreground="{StaticResource TextStrongBrush}"/>
                        </StackPanel>
                        <Border Grid.Column="1" CornerRadius="999" Background="#EEF2FF" Padding="10" Margin="12,0,0,0"
                                VerticalAlignment="Top">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1E40AF"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Proveedores Activos -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,12,0" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Proveedores Activos" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="18" FontSize="24" FontWeight="Bold" Margin="0,6,0,0" Foreground="#16A34A"/>
                        </StackPanel>
                        <Border Grid.Column="1" CornerRadius="999" Background="#E8FFF3" Padding="10" Margin="12,0,0,0"
                                VerticalAlignment="Top">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#16A34A"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Entregas Esta Semana -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="12,0,12,0" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Entregas Esta Semana" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="5" FontSize="24" FontWeight="Bold" Margin="0,6,0,0" Foreground="#D97706"/>
                        </StackPanel>
                        <Border Grid.Column="1" CornerRadius="999" Background="#FFF7ED" Padding="10" Margin="12,0,0,0"
                                VerticalAlignment="Top">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#D97706"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Productos Suministrados -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="12,0,0,0" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Productos Suministrados" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="156" FontSize="24" FontWeight="Bold" Margin="0,6,0,0" Foreground="#1D4ED8"/>
                        </StackPanel>
                        <Border Grid.Column="1" CornerRadius="999" Background="#EEF2FF" Padding="10" Margin="12,0,0,0"
                                VerticalAlignment="Top">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1D4ED8"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Barra de búsqueda + Filtros -->
            <Border CornerRadius="12" BorderBrush="#E5E7F0" BorderThickness="1" Background="White" Padding="8" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="8" BorderBrush="#E5E7F0" BorderThickness="1" Background="White" Padding="10" Margin="0,0,8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                     Background="Transparent" BorderThickness="0" Padding="0"
                                     Style="{StaticResource InputText}"
                                     ToolTip="Buscar proveedores por nombre o contacto..."/>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1"
                            Padding="10,8"
                            Background="White"
                            Foreground="{StaticResource TextStrongBrush}"
                            BorderBrush="#E5E7F0"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="OpenFilters_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Filtros"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Lista de Proveedores -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Lista de Proveedores" Style="{StaticResource SectionTitle}" Margin="0,0,0,8"/>
                    <Separator Background="{StaticResource DividerBrush}" Height="1" Margin="0,8,0,8"/>

                    <DataGrid AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Padding="4"
                              Style="{StaticResource DataGridBase}"
                              ColumnHeaderStyle="{StaticResource DataGridHeader}"
                              RowStyle="{StaticResource DataGridRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Proveedor"      Binding="{Binding Nombre}"      Width="2*"/>
                            <DataGridTextColumn Header="Contacto"       Binding="{Binding Contacto}"    Width="2*"/>
                            <DataGridTextColumn Header="Productos"      Binding="{Binding Productos}"   Width="140"/>
                            <DataGridTextColumn Header="Última Entrega" Binding="{Binding UltimaFecha}" Width="160"/>
                            <DataGridTextColumn Header="Estado"         Binding="{Binding Estado}"      Width="140"/>

                            <!-- Acciones -->
                            <DataGridTemplateColumn Header="Acciones" Width="190">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Ver" Margin="0,0,6,0" Click="ViewProvider_Click">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Editar" Margin="0,0,6,0" Click="EditProvider_Click">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Historial" Margin="0,0,6,0" Click="HistoryProvider_Click">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Eliminar" Click="DeleteProvider_Click">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Paginación -->
            <components:Pagination/>

        </StackPanel>
    </components:PageWrapper>
</Page>

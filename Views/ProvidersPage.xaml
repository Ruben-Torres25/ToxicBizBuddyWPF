<Page x:Class="ToxicBizBuddyWPF.Views.ProvidersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="clr-namespace:ToxicBizBuddyWPF.Components"
      Title="ProvidersPage">

    <!-- Estilos locales (no tocan Styles.xaml) -->
    <Page.Resources>
        <!-- Botón outline verde basado en tu BtnPrimary (para conservar template y border-radius) -->
        <Style x:Key="BtnPrimaryOutlineGreen" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#16A34A"/>
            <Setter Property="BorderBrush" Value="#86EFAC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Tarjeta métrica base -->
        <Style x:Key="MetricCard" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E5E7F0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <!-- Métrica verde -->
        <Style x:Key="MetricCardSuccess" TargetType="Border" BasedOn="{StaticResource MetricCard}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E8FBEF" Offset="0"/>
                        <GradientStop Color="#F4FFF9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#D6F5E2"/>
        </Style>

        <!-- Métrica amarilla -->
        <Style x:Key="MetricCardWarn" TargetType="Border" BasedOn="{StaticResource MetricCard}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFF7E6" Offset="0"/>
                        <GradientStop Color="#FFFDF6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FDE68A"/>
        </Style>

        <!-- Métrica azul -->
        <Style x:Key="MetricCardInfo" TargetType="Border" BasedOn="{StaticResource MetricCard}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EEF2FF" Offset="0"/>
                        <GradientStop Color="#F8FAFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#E0E7FF"/>
        </Style>

        <!-- Burbuja de icono -->
        <Style x:Key="MetricIconPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#EEF2FF"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </Page.Resources>

    <components:PageWrapper>
        <StackPanel Margin="20">

            <!-- Header con dos botones a la derecha -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Gestión de Proveedores" Style="{StaticResource H1}"/>
                    <TextBlock Text="Administra tus proveedores y recepción de mercadería"
                               Style="{StaticResource Subtle}" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Registrar Mercadería (outline verde) -->
                <Button Grid.Column="1"
                        Style="{StaticResource BtnPrimary}"
                        Padding="14,8"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Text="Registrar Mercadería"/>
                    </StackPanel>
                </Button>

                <!-- + Nuevo Proveedor (azul, como BtnPrimary del ejemplo) -->
                <Button Grid.Column="2"
                        Style="{StaticResource BtnPrimary}"
                        Padding="14,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Text="Nuevo Proveedor"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Métricas -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Proveedores -->
                <Border Grid.Column="0" Style="{StaticResource MetricCardInfo}" Margin="0,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Total Proveedores" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="24" FontSize="24" FontWeight="Bold" Margin="0,6,0,0"
                                       Foreground="{StaticResource TextStrongBrush}"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Margin="12,0,0,0">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1E40AF"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Proveedores Activos -->
                <Border Grid.Column="1" Style="{StaticResource MetricCardSuccess}" Margin="12,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Proveedores Activos" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="18" FontSize="24" FontWeight="Bold" Margin="0,6,0,0" Foreground="#16A34A"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Margin="12,0,0,0" Background="#E8FFF3">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#16A34A"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Entregas Esta Semana -->
                <Border Grid.Column="2" Style="{StaticResource MetricCardWarn}" Margin="12,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Entregas Esta Semana" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="5" FontSize="24" FontWeight="Bold" Margin="0,6,0,0" Foreground="#D97706"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Margin="12,0,0,0" Background="#FFF7ED">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#D97706"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Productos Suministrados -->
                <Border Grid.Column="3" Style="{StaticResource MetricCardInfo}" Margin="12,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Productos Suministrados" Style="{StaticResource Subtle}"/>
                            <TextBlock Text="156" FontSize="24" FontWeight="Bold" Margin="0,6,0,0" Foreground="#1D4ED8"/>
                        </StackPanel>
                        <Border Grid.Column="1" Style="{StaticResource MetricIconPill}" Margin="12,0,0,0">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#1D4ED8"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Barra de búsqueda + Filtros -->
            <Border CornerRadius="12" BorderBrush="#E5E7F0" BorderThickness="1" Background="White" Padding="8" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border CornerRadius="8" BorderBrush="#E5E7F0" BorderThickness="1" Background="White" Padding="10" Margin="0,0,8,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Grid.Column="1"
                                     Background="Transparent" BorderThickness="0" Padding="0"
                                     Style="{StaticResource InputText}"
                                     ToolTip="Buscar proveedores por nombre o contacto..."/>
                        </Grid>
                    </Border>

                    <Button Grid.Column="1"
                            Padding="10,8"
                            Background="White"
                            Foreground="{StaticResource TextStrongBrush}"
                            BorderBrush="#E5E7F0"
                            BorderThickness="1"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Filtros"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Lista de Proveedores -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Lista de Proveedores" Style="{StaticResource SectionTitle}" Margin="0,0,0,8"/>
                    <Separator Background="{StaticResource DividerBrush}" Height="1" Margin="0,8,0,8"/>

                    <DataGrid AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              Padding="4"
                              Style="{StaticResource DataGridBase}"
                              ColumnHeaderStyle="{StaticResource DataGridHeader}"
                              RowStyle="{StaticResource DataGridRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Proveedor"      Binding="{Binding Nombre}"      Width="2*"/>
                            <DataGridTextColumn Header="Contacto"       Binding="{Binding Contacto}"    Width="2*"/>
                            <DataGridTextColumn Header="Productos"      Binding="{Binding Productos}"   Width="140"/>
                            <DataGridTextColumn Header="Última Entrega" Binding="{Binding UltimaFecha}" Width="160"/>
                            <DataGridTextColumn Header="Estado"         Binding="{Binding Estado}"      Width="140"/>

                            <!-- Acciones -->
                            <DataGridTemplateColumn Header="Acciones" Width="190">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Ver" Margin="0,0,6,0">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Editar" Margin="0,0,6,0">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Historial" Margin="0,0,6,0">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                            <Button Style="{StaticResource IconButtonGhost}" ToolTip="Eliminar">
                                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Paginación -->
            <components:Pagination/>

        </StackPanel>
    </components:PageWrapper>
</Page>

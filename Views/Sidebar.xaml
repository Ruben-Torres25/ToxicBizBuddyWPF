<UserControl x:Class="ToxicBizBuddyWPF.Views.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="250" Background="#FFFFFF">
    <Border BorderBrush="#E5E7EB" BorderThickness="0,0,1,0" Background="#FFFFFF">
        <StackPanel>
            <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                <StackPanel Margin="20">
                    <TextBlock Text="Toxic Business" FontSize="24" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="Sistema de Gestión" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <StackPanel Margin="10">
                <Button x:Name="BtnDashboard" Style="{StaticResource SidebarButtonStyle}" Click="Dashboard_Click">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnProductos" Style="{StaticResource SidebarButtonStyle}" Click="Products_Click">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Productos"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnClientes" Style="{StaticResource SidebarButtonStyle}" Click="Clients_Click">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Clientes"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

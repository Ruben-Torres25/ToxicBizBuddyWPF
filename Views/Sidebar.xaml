<UserControl x:Class="ToxicBizBuddyWPF.Views.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="250" Background="#FFFFFF">
    <Border BorderBrush="#E5E7EB" BorderThickness="1" Background="#FFFFFF">
        <StackPanel>
            <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                <StackPanel Margin="20">
                    <TextBlock Text="Toxic Business" FontSize="24" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="Sistema de Gestión" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Botonera del sidebar -->
            <StackPanel Margin="10">
                <!-- Activo por Tag="active" -->
                <Button Style="{StaticResource SidebarButtonStyle}" Click="Dashboard_Click" Tag="active">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Dashboard"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Click="Products_Click">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Productos"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}" Click="Clients_Click">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,8,0"/>
                        <TextBlock Text="Clientes"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
